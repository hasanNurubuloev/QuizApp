<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/qh_tv_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:textSize="20sp"
        android:padding="16dp"
        app:layout_constraintBottom_toTopOf="@+id/linear_multiply"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linear_multiply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/qh_tv_question">

        <Button
            android:id="@+id/btn_first_mp"
            style="@style/ButtonQuiz" />

        <Button
            android:id="@+id/btn_second_mp"
            style="@style/ButtonQuiz"/>

        <Button
            android:id="@+id/btn_third_mp"
            style="@style/ButtonQuiz"/>

        <Button
            android:id="@+id/btn_fourth_mp"
            style="@style/ButtonQuiz" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_true_false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:visibility="gone"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/qh_tv_question">

        <Button
            android:id="@+id/btn_first_tf"
            style="@style/ButtonQuiz" />

        <Button
            android:id="@+id/btn_second_tf"
            style="@style/ButtonQuiz"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>